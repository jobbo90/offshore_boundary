
run in powershell
cd to project  folder
https://www.youtube.com/watch?v=wXDsMKJyK9c&ab_channel=YourTechRemote




ffmpeg -framerate 30 -i results/GIF/frames/%04d.png -vf "scale='min(1920,iw)':min'(1080,ih)':force_original_aspect_ratio=decrease,pad=1920:1080:-1:-1:color=white" -preset slow -crf 18 -c:v libx264 -level:v 4.0 -pix_fmt yuv420p results/GIF/pos138000-animation.mp4

# cut in 2 bits
ffmpeg -i results/GIF/pos138000-animation.mp4 -t 3 results/GIF/slow.mp4
ffmpeg -i results/GIF/pos138000-animation.mp4 -ss 00:00:03 results/GIF/part-2.mp4

# slow down the first bit
ffmpeg -i results/GIF/slow.mp4 -filter:v "setpts=2*PTS" results/GIF/part-1.mp4

https://trac.ffmpeg.org/wiki/Concatenate
ffmpeg -i results/GIF/part-1.mp4 -c copy -bsf:v h264_mp4toannexb -f mpegts results/GIF/intermediate1.ts
ffmpeg -i results/GIF/part-2.mp4 -c copy -bsf:v h264_mp4toannexb -f mpegts results/GIF/intermediate2.ts

ffmpeg -i "concat:results/GIF/intermediate1.ts|results/GIF/intermediate2.ts" -c copy -bsf:a aac_adtstoasc results/GIF/output.mp4

